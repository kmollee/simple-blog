{% extends "todo/base.jinja" %}
{% block content %}
    <div class="col-md-12">
        <div class="form center">
            {{ form }}
        </div>
        <div class="listblock col-md-12">
            <ul id="listblock">
            {% for list in lists %}
                <li class="col-sm-3">
                    <div class="title col-sm-12 center">
                        <a href="{{ list.get_absolute_url }}">{{list.name}} - {{list.author}}({{ list.incomplete_tasks.count }})</a>
                    </div>
                    <div class="update col-sm-6">
                        <a href="{{ list.get_update_url }}">update</a>
                    </div>
                    <div class="delete col-sm-6">
                        <a href="{{ list.get_delete_url }}">delete</a>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock content %}

{% block extraCss %}
<style>
#listblock{
    margin-top: 2em;
    list-style-type: none;
}

#listblock li{
    outline: 3px solid white;
    padding:0;
}

#listblock li:hover{
    box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.2);
    cursor: pointer;
    transform: scale(1.1);
    z-index: 999;
}

#listblock .title{
    color:white;
    background-color: #8EEDF7;
}
#listblock .update{
    color:white;
    background-color: #FFAC81;
}
#listblock .delete{
    color:white;
    background-color: #FF928B;
}
#listblock a{
    color:inherit;
    text-decoration: none;
    display: block;
    text-align: center;
}
</style>
{% endblock extraCss %}

